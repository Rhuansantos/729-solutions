extends layout/main
block content
  main
    section.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='.carousel', data-slide-to='0')
        li(data-target='.carousel', data-slide-to='1')
        li(data-target='.carousel', data-slide-to='2')
      .carousel-inner(role='listbox')
        .carousel-item.active
          img.d-block.img-fluid(src='https://images.unsplash.com/photo-1511981704457-eb2ee741f234?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1920&h=500&fit=crop&s=76b42a82ea60be3feb13090c6698339a', alt='First slide')
        .carousel-item
          img.d-block.img-fluid(src='https://images.unsplash.com/photo-1516317215653-ca7087414c66?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1920&h=500&fit=crop&s=6837de5890d065d6422bb1bf03326d91', alt='Second slide')
        .carousel-item
          img.d-block.img-fluid(src='https://images.unsplash.com/photo-1513864299838-b60b4b7d2bde?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1920&h=500&fit=crop&s=cf0b6adb068214c26ac94d20efdeb04d', alt='Third slide')
      a.carousel-control-prev(href='.carousel', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='.carousel', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
